@model PL.Models.UserModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm()) 
{
    <div>
        Username : @Html.TextBoxFor(m => m.UserName)
    </div>
    <div>
        Password : @Html.PasswordFor(m => m.Password) 
    </div>
    <div>
        <input type="submit" value="Sign In" />
    </div>
    <p>@ViewBag.ErrorMessage</p>
}

